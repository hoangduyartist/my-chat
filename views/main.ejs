    <script type="text/javascript" src="libs/fancybox/options/jquery.fancybox-buttons.js?v=1.0.5"></script>
    <script type="text/javascript" src="libs/fancybox/options/jquery.fancybox-thumbs.js?v=1.0.7"></script>
